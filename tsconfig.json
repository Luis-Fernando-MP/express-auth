{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "^\\[.*\\]$",
		"resolveJsonModule": true,
		// "sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules", "./dist"]
}
